<nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1">
            <a class="nav-link active" href="/">Mongo Scraper</a>
        </span>
    </nav>
<div class="container">
    <div class="row">
    <h1><a href="{{result.link}}" target="_blank">{{result.title}}</a></h1>
    <p>{{result.summary}}</p>
  </div>
  <div class="row">
    <h2>Comments</h2>
  </div>
  {{!--If no comments exist then display!--}}
  <div class="row">
    {{#unless comment}}
    <p>There are no comments previous comments!</p>
    {{/unless}}
  </div>
  <div class="row">
    <ul>
      {{#each result}}
      <li>
        <h5>Name: {{name}} </h5>
        <p>Message: {{result.comment}}</p>
        <button class="delete btn btn-secondary" dataId="{{result._id}}">Delete</button>
      </li>
      {{/each}}
    </ul>
    
  </div>
  <div class="row">
    <h2>Comment on the Article</h2>
  </div>
  {{!--Do a post method for the comment(s) a user adds and save it to the db--}}
  <form method="POST" action="/articles/{{result._id}}">
    <div class="form-group row">
      <label for="name" class="col-form-label">Name</label>
      <input class="form-control" type="text" name="name" id="name" required>
    </div>
    <div class="form-group row">
      <label for="body">Message</label>
      <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>